<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 p-10">
        <div class="form" >
          <form action="/create" method="POST">
            <input name="title" type="text" placeholder="Title" class="rounded block w-full px-5 py-2 bg-zinc-700 text-white"/>
            <textarea name="details" placeholder="Write your task " class="block mt-2 w-full px-5 py-2 bg-zinc-700 text-white resize-none" ></textarea>
            <input type="submit" class="rounded text-white bg-blue-500 px-4  py-2 mt-2" value="Create a Task">
          </form>
          </div>
            <div class="tasks flex gap-[0.5vh] flex-wrap">

              <% if(files.length >0) {%>
                  <% files.forEach(function(val){ %>
                     <div class="task  bg-zinc-700 rounded w-70 px-3 py-3 mt-5 ">
                    <h1 class="text-white  text-3xl tracking-tighter"><%= val %></h1>
                    <div class="flex justify-between">
                            <a href="/files/<%=val%>" class="inline-block text-blue-500">Read More..</a>
                            <a href="/edit/<%=val%>" class="inline-block text-zinc-500">edit.</a>

                    </div>
                
                    </div>
                 <% }) %>
              <% } else { %>
<h3 class="text-zinc-500 mt-15">No Task yet</h3>
                <% } %>
                    
        </div>
    </div>
  </body>
</html>